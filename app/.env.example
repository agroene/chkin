# Database connection
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/chkin?schema=public"

# App configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Better Auth Configuration
# Generate a secret key for production: openssl rand -hex 32
BETTER_AUTH_SECRET="your-secret-key-here-min-32-chars-for-production"
# This should match NEXT_PUBLIC_APP_URL for local dev, but with /api/auth for production
BETTER_AUTH_URL="http://localhost:3000/api/auth"

# Email configuration (for password reset, verification, invitations)
# Using Resend (https://resend.com)
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="noreply@chkin.co.za"

# Logging level for audit trails
LOG_LEVEL="info"

# Cron job authentication (for consent expiry notifications, etc.)
# Generate a secret: openssl rand -hex 32
CRON_SECRET="your-cron-secret-here"

# Google Places API (for address autocomplete)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable the Places API: https://console.cloud.google.com/apis/library/places-backend.googleapis.com
# New accounts get $300 free credit for 90 days, then $200/month ongoing credit
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY="your-google-places-api-key-here"

# DocuSeal Configuration (for PDF form population and e-signatures)
# Self-hosted DocuSeal instance URL
DOCUSEAL_URL="http://localhost:3001"
# API key from DocuSeal admin panel (Settings > API)
DOCUSEAL_API_KEY="your-docuseal-api-key-here"
# Secret key for DocuSeal container (generate with: openssl rand -hex 64)
DOCUSEAL_SECRET_KEY="your-docuseal-secret-key-here"
# Webhook secret for verifying DocuSeal callbacks
DOCUSEAL_WEBHOOK_SECRET="your-webhook-secret-here"
